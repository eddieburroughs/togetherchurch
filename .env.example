# =============================================================================
# Together Church — Environment Variables
# Copy this file to .env.local and fill in real values.
# =============================================================================

# --- Next.js ---
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# --- Supabase Database (direct connection, optional for migrations) ---
DATABASE_URL=

# --- Authentication (OAuth providers — optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Email / SMTP (optional) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@togetherchurch.app

# --- Storage / Uploads (Supabase Storage or S3-compatible) ---
STORAGE_BUCKET=uploads

# --- Stripe (optional, for donations/payments) ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# --- Misc ---
NODE_ENV=development
